# Environment Variables for t3.small EC2 Instance
# Optimized for 5 concurrent users with 60 curated stocks

# Server Configuration
NODE_ENV=production
PORT=5000

# Database (PostgreSQL)
DATABASE_URL="postgresql://mathuser:mathpass123@localhost:5432/mathematical_economics"

# Redis Cache
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET=<GENERATE_SECURE_KEY_HERE>
JWT_EXPIRES_IN=7d

# CORS (경제교실.com domain)
CORS_ORIGIN=https://경제교실.com,https://xn--289aykm66cwye.com,https://www.경제교실.com,https://www.xn--289aykm66cwye.com

# Stock Price Updater (ENABLED for t3.small)
ENABLE_STOCK_UPDATER=true

# Caching Strategy (Increased TTL for resource efficiency)
STOCK_DATA_CACHE_TTL=300000          # 5 minutes (was 1 minute)
HISTORICAL_DATA_CACHE_TTL=7200000    # 2 hours (was 1 hour)

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info

# Korean Investment Securities API (Optional - for real-time Korean stocks)
KIS_APP_KEY=
KIS_APP_SECRET=
KIS_API_URL=https://openapi.koreainvestment.com:9443
KIS_ACCOUNT_NUMBER=
KIS_ACCOUNT_PRODUCT_CODE=01
KIS_IS_PAPER=true

# External Stock Data APIs
YAHOO_FINANCE_API_URL=https://query1.finance.yahoo.com
NAVER_FINANCE_URL=https://finance.naver.com

# Initial Setup (Set to false after first run)
INITIAL_SETUP=false
AUTO_CREATE_STOCKS=false
CREATE_DEMO_STUDENTS=false
