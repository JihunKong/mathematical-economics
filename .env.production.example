# Server Configuration
NODE_ENV=production
PORT=5000

# Database (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/economic_math_stock_db"

# Redis Configuration
REDIS_URL="redis://:password@localhost:6379"

# JWT Configuration
JWT_SECRET="your-very-secure-random-string-at-least-32-characters"
JWT_ACCESS_EXPIRY="15m"
JWT_REFRESH_EXPIRY="30d"

# Korean Investment Securities API
KIS_APP_KEY="your-app-key"
KIS_APP_SECRET="your-app-secret"
KIS_BASE_URL="https://openapi.koreainvestment.com:9443"

# Python Path (for crawler)
PYTHON_PATH="/usr/bin/python3"

# Logging
LOG_LEVEL="info"

# CORS Configuration
CORS_ORIGIN="https://your-domain.com,https://www.your-domain.com"

# Application Settings
INITIAL_BALANCE=10000000
DAILY_TRADE_LIMIT=1
TRADE_FEE_RATE=0.00015

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_MONITORING=true
METRICS_PORT=9090

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com